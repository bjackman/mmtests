# Example MM Test host config file, for run-kvm.sh
export MMTESTS_HOST_IP="192.168.122.1"
export AUTO_PACKAGE_INSTALL="yes"

# Let's have run-mmtests.sh output from the VMs in /tmp
#export MMTESTS_PSSH_OUTDIR=/tmp
